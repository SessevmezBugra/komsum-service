pipeline {
    agent {
        docker {
            image 'maven:3.8.1-adoptopenjdk-11'
            args '-v /root/.m2:/root/.m2'
        }
    }
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Maven Build') {
            steps {
                sh 'cd geography-service && mvn -B -DskipTests clean package'
            }
        }
        stage('Docker Build') {
            agent {
              dockerfile {
                additionalBuildArgs '-t bsessevmez/geography-service:latest'
                dir 'geography-service'
                filename 'Dockerfile'
              }
            }
            steps {
                echo 'Hello, JDK'
            }
        }
    }
}