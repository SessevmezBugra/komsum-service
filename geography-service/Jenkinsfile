pipeline {
    agent any
    options {
        skipStagesAfterUnstable()
    }
    stages {

        stage('Build') {
            steps {
                sh 'cd geography-service && docker run -it --rm -v "$PWD":/app -v "$HOME/.m2":/root/.m2 -v  -w /app maven mvn clean package -DskipTests'
                sh 'cd geography-service && docker build -t bsessevmez/geography-service:latest .'
            }
        }
    }
}