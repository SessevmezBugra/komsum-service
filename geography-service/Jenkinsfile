pipeline {
    agent {
        docker {
            image 'maven:3.8.1-adoptopenjdk-11'
            args '-v /root/.m2:/root/.m2'
        }
    }
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Maven Build') {
            steps {
                sh 'cd geography-service && mvn -B -DskipTests clean package'
            }
        }
        stage('Docker Build') {
            agent { node { label 'docker-agent' } }
            steps {
                sh 'cd geography-service && docker build -t bsessevmez/geography-service:latest .'
            }
        }
    }
}